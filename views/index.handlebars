<div class="container">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <img id="burgerImg"
                src="https://www.jing.fm/clipimg/full/106-1069163_burger-vector-transparent-burger-vector-png.png"
                alt="Cheeseburger Icon" width="400" height="300">
            <h1 class="display-1">Eat-Da-Burger</h1>
            <p class="lead">Enter the name of a burger you'd like to eat</p>
            <form action="">
                <div class="form-group">
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" cols="5"
                        placeholder="Enter Burger Name"></textarea>
                </div>
                <button type="submit">Submit</button>
            </form>
        </div>
    </div>
</div>

<!-- Pass in data from server.js -->
<ul>
    {{#each quotes}}
    <li>
        <p><span class="label">ID:</span> {{this.id}}</p>
        <p><span class="label">Quote:</span> {{this.quote}}</p>
        <p><span class="label">Author:</span> {{this.author}}</p>

        <button data-id="{{this.id}}" class="delquote">Delete</button>

        <a href="/{{this.id}}">Update this quote</a>
    </li>
    {{/each}}
</ul>

<h2>Add a Quote</h2>

<form class="create-form">

    <div class="form-group">
        <label for="auth">Author:</label>
        <input type="text" id="auth" name="author">
    </div>

    <div class="form-group">
        <label for="quo">Quote:</label>
        <textarea id="quo" name="quote" rows="8" cols="40"></textarea>
    </div>

    <button type="submit">Add Quote</button>
</form>